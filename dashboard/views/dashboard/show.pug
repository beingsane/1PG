doctype
html(lang='en')
  head
    include ../includes/header.pug
    
    script(src='/js/sidebar.js', defer)
    link(rel='stylesheet', href='/css/sidebar.css')
  body
    include ../includes/sidebar.pug

    #sidebarExtension.bg-light
      header.text-center.pt-4
        .large-icon.bg-white.round
          if guild.icon
            img.round(src=guild.iconURL({ dynamic: true, size: 128 }), alt=guild.name)
          else
            p.abbr #{guild.nameAcronym}
        a(href='/servers/' + guild.id)
          h4.pt-2 #{guild.name}
      .tabs.navbar-nav
        .category Modules
        a(href='#') #[i.fas.fa-gavel.pr-1.text-muted] Auto-mod
        a(href='#') #[i.fas.fa-coins.pr-1.text-muted] Economy
        a(href='#') #[i.fas.fa-star.pr-1.text-muted] General
        a(href='#') #[i.fas.fa-music.pr-1.text-muted] Music

    include ../includes/navbar.pug
    
    section#overview.px-5
      .form-group.mt-5
        .row.text-center
          .col-3
            .border.rounded.m-3.p-3
              p.uppercase
                i.fas.fa-user-ninja
                strong.ml-1 Owner
              p.mb-0 #{guild.owner.user.tag}
          .col-3
            .border.rounded.m-3.p-3
              p.uppercase
                i.fas.fa-user-alt
                strong.ml-1 Members
              p.mb-0 #{guild.memberCount}
          .col-3
            .border.rounded.m-3.p-3
              p.uppercase
                i.fas.fa-at
                strong.ml-1 Roles
              p.mb-0 #{guild.roles.cache.size}
          .col-3
            .border.rounded.m-3.p-3
              p.uppercase
                i.fas.fa-hashtag
                strong.ml-1 Channels
              p.mb-0 #{guild.channels.cache.size}