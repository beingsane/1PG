form(action='/servers/' + guild.id + '/general?_method=PUT', method='POST')
  section#generalModule.module.container.px-5
    .form-group.mt-5
      .row
        .col-4
          label Prefix
          input.form-control(name='prefix', value=savedGuild.general.prefix, type='text', required)
        .col-4
          label Blacklisted Channels
          select.form-control(name='blacklistedChannelIds', value=savedGuild.general.blacklistedChannelIds, multiple)
            each parentChannel in parentChannels
              optgroup(label=parentChannel.name)
              each channel in parentChannel.channels
                option(value=channel.id)
                  span.float-left ##{channel.name}
    .d-flex.justify-content-center
      button.btn.btn-primary
        i.fas.fa-rocket
        span.ml-1 Submit